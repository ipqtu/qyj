/* Page Container --------------------------------------------------------- */

.container
{
  position: relative;

  width: 1110px;
  margin-left: auto;
  margin-right: auto;

  background-color: white;

  -webkit-border-top-left-radius: 38px;
  -webkit-border-top-right-radius: 38px;
  -webkit-border-bottom-left-radius: 8px;
  -webkit-border-bottom-right-radius: 8px;
  -moz-border-radius-topleft: 38px;
  -moz-border-radius-topright: 38px;
  -moz-border-radius-bottomleft: 8px;
  -moz-border-radius-bottomright: 8px;
  border-top-left-radius: 38px;
  border-top-right-radius: 38px;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;

  -webkit-box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.4);
  -moz-box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.3);
  box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.3);
}
/*==========header=========*/
#header{background: #111;color: #EEE;overflow: hidden;padding: 7px 0 5px 0;margin-bottom: 1.5em; height:30px;}
#header_inner {margin: auto;padding: 0 20px;}
#logo {float: left;font-size: 22px;font-weight: bold;text-align: right;width: 108px;height: 24px;margin-top: 2px;}
#appendix {margin: 0;list-style: none;float: right;font-size: .85em;line-height: 30px;}
#appendix li {float: left;margin-left: 2em;line-height: 250%;font-size: .85em;}
#header a {color: #EEE;text-decoration: none;}

/* Page Header ------------------------------------------------------------ */

.container > header
{
  background-color: #151515;
  min-height: 100px;
  height: 160px;
  width: 1110px;
  position: relative;

  -webkit-border-top-left-radius: 38px;
  -webkit-border-top-right-radius: 38px;
  -moz-border-radius-topleft: 38px;
  -moz-border-radius-topright: 38px;
  border-top-left-radius: 38px;
  border-top-right-radius: 38px;

  -webkit-box-shadow: inset 0px -4px 10px rgba(0, 0, 0, 0.5);
  -moz-box-shadow: inset 0px -4px 10px rgba(0, 0, 0, 0.5);
  box-shadow: inset 0px -4px 10px rgba(0, 0, 0, 0.5);
}

.container > header img#icon
{
  position: absolute;
  left: 20px;
  top: 20px;
}

.container > header img#logo
{
  position: absolute;
  left: 30px;
  top: 200px;
  width: 140px;
  height: 43px;
}

.container > header p#summary
{
  position: absolute;
  color: #ccc;
  top: 250px;
  left: 20px;
  font-size: 9pt;
  width: 160px;
  font-weight: normal;
  text-align: center;
  color: rgba(255, 255, 255, 0.5);
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 20px;
}

/* Primary Navigation ----------------------------------------------------- */

.container > header nav
{
  position: absolute;
  right: 0;
  top: 0;
  padding-left: 38px;
  padding-right: 38px;
  background-image: -webkit-gradient(linear, left top, left bottom, from(#2c2c2c), to(#1a1a1a));
  background-image: -moz-linear-gradient(top, #2c2c2c, #1a1a1a);
  color: rgba(255, 255, 255, 0.5);
  font-family: "Helvetica Neue";
  font-weight: normal;
  font-weight: bold;
  font-size: 10pt;
  height: 34px;
  line-height: 34px;
  -webkit-border-bottom-left-radius: 38px;
  -webkit-border-top-right-radius: 38px;
  -moz-border-radius-bottomleft: 38px;
  -moz-border-radius-topright: 38px;
  border-bottom-left-radius: 38px;
  border-top-right-radius: 38px;
  -webkit-box-shadow: -2px 2px 5px rgba(0, 0, 0, 0.25);
  -moz-box-shadow: -2px 2px 5px rgba(0, 0, 0, 0.25);
  box-shadow: -2px 2px 5px rgba(0, 0, 0, 0.25);
  cursor: default;
}

.container > header nav ul,
.container > header nav li
{
  display: inline-block;
  list-style: none;
  margin: 0;
  padding: 0;
}

.container > header nav li
{
  text-shadow: 0px -1px 1px rgba(0, 0, 0, 0.25);
}

.container > header nav li.active
{
  color: white;
  padding-left: 14px;
  padding-right: 14px;
}

.container > header nav a
{
  display: block;
  color: inherit;
  text-decoration: none;
  padding-left: 14px;
  padding-right: 14px;
  -webkit-transition-properties: color;
  -webkit-transition-duration: 0.25s;
  -moz-transition-properties: color;
  -moz-transition-duration: 0.25s;
}

.container > header nav a:hover
{
  color: white;
}

.container > header nav a:active
{
  color: rgba(255, 255, 255, 0.7);
}
/* public------------------------*/
